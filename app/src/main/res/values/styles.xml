<resources>

    <!--base application theme-->
    <style name="AppMaterialTheme" parent="SuperMaterialTheme">
        <!-- Customise your theme here -->

    </style>


    <style name="SuperMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Parent theme for all Pre-Lollipop and Lollipop above versions i.e. For all devices. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <!--<item name="colorControlActivated">#0cf427</item>-->

        <!-- use to make contextual action mode overlap the Toolbar -->
        <item name="windowActionModeOverlay">true</item>

        <item name="actionModeStyle">@style/MyActionMode</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_arrow_back_white_24dp</item>

    </style>

    <style name="MyActionMode" parent="@style/Widget.AppCompat.ActionMode">

        <!-- background of the Contextual Action Bar -->
        <item name="background">@color/colorAccent</item>
        <item name="titleTextStyle">@style/MyTextStyle</item>
        <item name="actionModeCloseDrawable">@drawable/ic_add_white_24dp</item>

        <!-- Change Default icon of the Action Mode
        <item name="actionModeCloseDrawable">@drawable/refresh</item>
-->
    </style>

    <!-- Contextual ActionBar title text -->
    <style name="MyTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ContextualButtonStyle" parent="Base.Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- Used for the title and text -->
        <item name="android:textColor">@color/blackText</item>
    </style>

    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:textColorPrimary">@android:color/white</item>  <!-- Text color of Toolbar Title -->
        <item name="android:textColorSecondary">@android:color/white</item><!-- Color of Overflow Menu ( 3 dots icon )
                                                                                    and color of Navigation Drawer Icon-->
    </style>

    <style name="MyPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/overflowMenuBackground</item><!--Background of Overflow Menu-->
        <item name="android:textColorPrimary">@color/grey_800</item><!-- Text color of Overflow Menu items-->
    </style>


</resources>
